{
    "name": "@nao-todo/desktop",
    "version": "1.0.0",
    "description": "Desktop version of NaoTodo",
    "author": "Nathan Lee",
    "license": "MIT",
    "private": true,
    "main": "src/index.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder"
    },
    "build": {
        "appId": "xyz.nathan33.naotodo",
        "productName": "NaoTodoDesktop",
        "win": {
            "icon": "./src/logo.png",
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        },
        "nsis": {
            "oneClick": false,
            "perMachine": true,
            "allowToChangeInstallationDirectory": true
        }
    },
    "devDependencies": {
        "electron": "30.5.1",
        "electron-builder": "24.13.3"
    }
}
